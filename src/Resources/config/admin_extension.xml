<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="admin.extension.action_delete" class="Smart\SonataBundle\Admin\Extension\ActionExtension">
            <argument type="string">delete</argument>
            <tag name="sonata.admin.extension" global="true" />
        </service>
        <service id="admin.extension.action_edit" class="Smart\SonataBundle\Admin\Extension\ActionExtension">
            <argument type="string">edit</argument>
            <tag name="sonata.admin.extension" global="true" />
        </service>
        <service id="admin.extension.action_view" class="Smart\SonataBundle\Admin\Extension\ActionExtension">
            <argument type="string">view</argument>
            <tag name="sonata.admin.extension" global="true" />
        </service>
        <service id="admin.extension.import" class="Smart\SonataBundle\Admin\Extension\ImportExtension">
        </service>
    </services>
</container>
